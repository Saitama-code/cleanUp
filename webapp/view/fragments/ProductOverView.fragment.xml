<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:grid="sap.ui.layout.cssgrid"
>
	<Dialog id="productOverview" title="Here is Your Product" class="sapUiContentPadding">
		
		<grid:CSSGrid
		id="grid2"
		gridTemplateColumns="1fr 2fr"
		gridTemplateRows="1fr 1fr 1fr"
		gridGap="1rem"
		>
		<Text text="Name of Product:"/>
        <Label text="{currObject>/name}"/>

        <Text text="Quantity:"/>
        <Label text="{currObject>/quantity}"/>

		<Text text="Comments:"/>
        <Label text="{currObject>/comment}"/>

        <Text text="Owner:"/>
        <Label text="{currObject>/owner}"/>
	</grid:CSSGrid>
    <grid:CSSGrid
		id="grid3"
		gridTemplateColumns="1fr 1fr 1fr"
		gridGap="1rem"
		>
         <Button  text="cancel" type="Emphasized" press="handelCloseObject"/>
        <Button text="Mail" icon="sap-icon://email" type="Emphasized" press="handelMail"/>
		<Button text="Call" icon="sap-icon://call" type="Emphasized" press="handelCall"/>
    </grid:CSSGrid>
	</Dialog>
</core:FragmentDefinition>